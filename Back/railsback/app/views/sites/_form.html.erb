<%= form_for @site do |f| %>
<% cache f do %>
<p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    <p>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.label :imgpath %>
        <%= f.text_field :imgpath %>
    </p>
    <p>
        <%= f.label :category %>
        <%= f.text_area :category %>                               
    </p>

    <p>
    <%= f.submit %>
    </p>    
</p>
<% end %>
<% end %>

<%= link_to "Back to Main Page", sites_path%>